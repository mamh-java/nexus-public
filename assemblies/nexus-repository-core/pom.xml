  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <mainClass>org.sonatype.nexus.bootstrap.application.NexusRepositoryCoreApplication</mainClass>
        </configuration>
        <executions>
          <execution>
            <id>uberjar</id>
            <phase>package</phase>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <!-- parent pom sets this execution up in pluginManagement, so it will autorun by including the plugin-->
          <!-- which we don't want for this assembly as we have our own antrun execution doing the work -->
          <execution>
            <id>overlay-assembly</id>
            <configuration>
              <skip>true</skip>
            </configuration>
          </execution>
          <execution>
            <id>customize-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <unzip src="${org.sonatype.nexus.assemblies:nexus-base-overlay:zip}"
                       dest="${project.build.directory}/assembly"
                       overwrite="true">
                  <patternset>
                    <exclude name="*/etc/jetty/nexus-web.xml"/>
                    <exclude name="*/lib/**"/>
                    <exclude name="sonatype-work/**"/>
                  </patternset>
                  <cutdirsmapper dirs="1"/>
                </unzip>

                <unzip src="${org.sonatype.nexus.assemblies:nexus-base-overlay:zip}"
                       dest="${project.build.directory}/sonatype-work"
                       overwrite="true">
                  <patternset>
                    <include name="sonatype-work/**"/>
                  </patternset>
                  <cutdirsmapper dirs="1"/>
                </unzip>

                <!-- overlay customizations -->
                <copy todir="${project.build.directory}/assembly" overwrite="true">
                  <fileset dir="${project.basedir}/src/main/resources/overlay"/>
                </copy>
                <copy todir="${project.build.directory}/sonatype-work" overwrite="true">
                  <fileset dir="${project.basedir}/src/main/resources/sonatype-work"/>
                </copy>

                <!-- workaround maven-assembly-plugin bug where lineEnding configuration for fileSets is ineffective -->
                <fixcrlf srcdir="${project.build.directory}/assembly/bin" includes="*" excludes="*.bat" eol="unix"/>
                <fixcrlf srcdir="${project.build.directory}/assembly/bin" includes="*.bat" eol="dos"/>

                <!-- and don't forget the uberjar -->
                <copy file="${project.build.directory}/${project.artifactId}-${project.version}.jar"
                      todir="${project.build.directory}/assembly/bin" overwrite="true"/>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

